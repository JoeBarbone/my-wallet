const { gql } = require('apollo-server-express');

const typeDefs = gql`

  type User {
    _id: ID
    firstName: String
    lastName: String
    email: String
    cards: [Card]
  }

  type Card {
    _id: ID
    cardIssuer: String
    cardType: String
    contactPhone: String
    createdAt: String
  }  

  type Auth {
    token: ID!
    user: User
  }

  type Query {
    me: User
    users: [User]
    user(username: String!): User
    cards(email: String): [Card]
  }

  
`;

module.exports = typeDefs;
